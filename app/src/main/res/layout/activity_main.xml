<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#DEDEDE"
    tools:context="com.bau_hornick.blackjack.MainActivity">

    <Button
        android:text="About"
        android:layout_width="wrap_content"
        android:id="@+id/about_button"
        android:background="#a30000"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/start_button"
        android:layout_alignStart="@+id/resume_button"
        android:layout_height="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/blackjacklogo"
        android:id="@+id/deck_imageView"
        android:layout_above="@+id/resume_button"
        android:layout_marginBottom="51dp" />

    <Button
        android:text="Resume"
        android:layout_width="wrap_content"
        android:id="@+id/resume_button"
        android:background="#a30000"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        android:layout_height="60dp"
        android:layout_above="@+id/about_button"
        android:layout_alignStart="@+id/start_button" />

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:id="@+id/start_button"
        android:background="#a30000"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/resume_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
