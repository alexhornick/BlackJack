<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bau_hornick.blackjack.DealerActivity">

    <Button
        android:text="Bet-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:elevation="0dp"
        android:visibility="visible"
        android:layout_above="@+id/increase_bet_button"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Bet+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/increase_bet_button"
        android:elevation="0dp"
        android:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/current_money_textView"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/increase_bet_button"
        android:layout_below="@+id/button2"
        android:layout_width="40dp"
        android:textColor="#000000"
        android:gravity="left|center"
        android:text="99" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/bet_textView"
        android:layout_alignTop="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_above="@+id/increase_bet_button"
        android:text="1(99)"
        android:gravity="left|center"
        android:layout_width="40dp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="120dp"
        app:srcCompat="@drawable/red_card_back"
        android:id="@+id/imageView"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/bet_textView" />

    <TextView
        android:text="52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:id="@+id/deck_count_textView"
        android:textColor="#000000"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Stand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stand"
        android:background="#ff4c4c"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="HIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hit"
        style="@style/Widget.AppCompat.Button"
        android:elevation="0dp"
        android:background="#6fdc6f"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/stand"
        android:layout_marginEnd="13dp"/>

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/player_score"
        android:textSize="30sp"
        android:textAlignment="viewEnd"
        android:layout_alignTop="@+id/deck_count_textView"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
